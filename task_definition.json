{
  "family": "application-stack",
  "executionRoleArn": "arn:aws:iam::920373021746:user/m.joshy-docker-user",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "920373021746.dkr.ecr.ap-southeast-2.amazonaws.com/backend",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [{}],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "backend-logs",
          "awslogs-region": "your-region",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "frontend",
      "image": "920373021746.dkr.ecr.ap-southeast-2.amazonaws.com/frontend",
      "memory": 256,
      "cpu": 128,
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "frontend-logs",
          "awslogs-region": "your-region",
          "awslogs-stream-prefix": "frontend"
        }
      }
    },
    {
      "name": "nginx",
      "image": "920373021746.dkr.ecr.ap-southeast-2.amazonaws.com/nginx",
      "memory": 256,
      "cpu": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "nginx-logs",
          "awslogs-region": "your-region",
          "awslogs-stream-prefix": "nginx"
        }
      }
    }
  ]
}
